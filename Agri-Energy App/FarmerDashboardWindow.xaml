<Window x:Class="Agri_Energy_App.FarmerDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FarmerDashboardWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Top Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Sidebar -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Background="#006400" Margin="0,2,0,-2">
            <StackPanel>
                <TextBlock Text="AgriConnect"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="10,20,10,30"
                           HorizontalAlignment="Center"/>

                <Button Name="btnDashboard" Content="Dashboard" Margin="10,5" Padding="10"
                        Foreground="White" Background="#228B22" Click="BtnDashboard_Click"/>
                <Button Name="btnAddProduct" Content="Add Product" Margin="10,5" Padding="10"
                        Foreground="White" Background="#228B22" Click="BtnAddProduct_Click"/>
                <Button Name="btnSearchProducts" Content="Search Products" Margin="10,5" Padding="10"
                        Foreground="White" Background="#228B22" Click="BtnSearchProducts_Click"/>
                <Button Name="btnFarmerDetails" Content="My Profile" Margin="10,5" Padding="10"
                        Foreground="White" Background="#228B22" Click="btnFarmerDetails_Click"/>

                <Separator Margin="10,20,10,10" Background="White"/>
                <Button Name="btnLogout" Content="Log Out" Margin="10,5" Padding="10"
                        Foreground="White" Background="#B22222" Click="BtnLogout_Click"/>
            </StackPanel>
        </Border>

        <!-- Top Header -->
        <Border Grid.Column="1" Grid.Row="0" Background="#228B22">
            <TextBlock x:Name="txtWelcome"
                       Foreground="White"
                       FontSize="18"
                       VerticalAlignment="Center"
                       Margin="20,0"/>
        </Border>

        <!-- Main Content Frame -->
        <Frame x:Name="mainContentFrame" 
               Grid.Column="1" 
               Grid.Row="1" 
               NavigationUIVisibility="Hidden"
               Margin="10"/>
    </Grid>
</Window>