<Window x:Class="Agri_Energy_App.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agri_Energy_App"
        mc:Ignorable="d"
        Title="AgricConnect - Registration" 
        Height="700" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,30">
            <TextBlock Text="AgricConnect" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#006400"/>
            <TextBlock Text="Connecting Agriculture &amp; Sustainable Energy"
                       FontSize="10"
                       Foreground="DarkGray"/>
        </StackPanel>

        <!-- Registration Title -->
        <StackPanel Grid.Row="1" Margin="30,20,30,0">
            <TextBlock Text="Create an account"
                       FontSize="14"
                       FontWeight="SemiBold"/>
            <TextBlock Text="Join AgricConnect to start managing your agricultural energy solutions"
                       FontSize="9"
                       Foreground="Gray"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Name Fields -->
        <Grid Grid.Row="2" Margin="30,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="First Name" FontWeight="Bold"/>
                <TextBox x:Name="txtFirstName" Margin="0,5" Padding="5"/>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBlock Text="Last Name" FontWeight="Bold"/>
                <TextBox x:Name="txtLastName" Margin="0,5" Padding="5"/>
            </StackPanel>
        </Grid>

        <!-- Email Field -->
        <StackPanel Grid.Row="3" Margin="30,10">
            <TextBlock Text="Email Address" FontWeight="Bold"/>
            <TextBox x:Name="txtEmail" Text="your@email.com" Margin="0,5" Padding="5"/>
        </StackPanel>

        <!-- Role Selection -->
        <StackPanel Grid.Row="4" Margin="30,10">
            <TextBlock Text="Select Your Role" FontWeight="Bold"/>
            <ComboBox x:Name="cmbRole" Margin="0,5" Padding="5">
                <ComboBoxItem Content="Farmer" IsSelected="True"/>
                <ComboBoxItem Content="Employee"/>
            </ComboBox>
        </StackPanel>

        <!-- Password Fields -->
        <StackPanel Grid.Row="5" Margin="30,10">
            <TextBlock Text="Password" FontWeight="Bold"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Margin="30,10">
            <TextBlock Text="Confirm Password" FontWeight="Bold"/>
            <PasswordBox x:Name="txtConfirmPassword" Margin="0,5" Padding="5"/>
        </StackPanel>

        <!-- Terms Checkbox -->
        <CheckBox Grid.Row="7" 
                  Content="I agree to the Terms of Service and Privacy Policy"
                  Margin="30,15"
                  x:Name="chkTerms"/>

        <!-- Create Account Button -->
        <Button Grid.Row="8"
                Content="Create Account"
                Background="#006400"
                Foreground="White"
                FontWeight="Bold"
                Margin="30,20"
                Height="40"
                Click="CreateAccount_Click"/>

        <!-- Footer Vision -->
        <StackPanel Grid.Row="9" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <TextBlock Text="*Empowering farmers with sustainable energy solutions for a greener tomorrow.*"
                       FontStyle="Italic"
                       Foreground="Gray"
                       TextAlignment="Center"/>
            <TextBlock Text="— AgricConnect Vision"
                       Foreground="Gray"
                       TextAlignment="Center"/>
        </StackPanel>

        <!-- Sign In Link -->
        <TextBlock Grid.Row="10" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Run Text="Already have an account?"/>
            <Hyperlink x:Name="lnkSignIn" Click="lnkSignIn_Click">
                <Run Text=" Sign in"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>