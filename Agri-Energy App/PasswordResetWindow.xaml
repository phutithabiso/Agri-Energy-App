<Window x:Class="Agri_Energy_App.PasswordResetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agri_Energy_App"
        mc:Ignorable="d"
        Title="Password Reset - AgricConnect" 
        Height="400" 
        Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock Text="AgricConnect" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="#006400"/>
            <TextBlock Text="Reset Your Password"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Email Field (for first step) -->
        <StackPanel Grid.Row="1" Margin="0,20" x:Name="emailPanel">
            <TextBlock Text="Enter your email address" FontWeight="Bold"/>
            <TextBox x:Name="txtEmail" Margin="0,5" Padding="5" IsEnabled="False"/>
        </StackPanel>

        <!-- Verification Code (for second step) -->
        <StackPanel Grid.Row="2" Margin="0,10" x:Name="codePanel" Visibility="Collapsed">
            <TextBlock Text="Verification Code" FontWeight="Bold"/>
            <TextBox x:Name="txtVerificationCode" Margin="0,5" Padding="5"/>
        </StackPanel>

        <!-- New Password Fields (for third step) -->
        <StackPanel Grid.Row="3" Margin="0,10" x:Name="passwordPanel" Visibility="Collapsed">
            <TextBlock Text="New Password" FontWeight="Bold"/>
            <PasswordBox x:Name="txtNewPassword" Margin="0,5" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,10" x:Name="confirmPasswordPanel" Visibility="Collapsed">
            <TextBlock Text="Confirm New Password" FontWeight="Bold"/>
            <PasswordBox x:Name="txtConfirmPassword" Margin="0,5" Padding="5"/>
        </StackPanel>

        <!-- Status Message -->
        <TextBlock Grid.Row="5" x:Name="txtStatus" Margin="0,10" 
                   TextWrapping="Wrap" Foreground="Red"/>

        <!-- Action Buttons -->
        <Button Grid.Row="6" x:Name="btnAction" Content="Send Verification Code"
                Background="#006400" Foreground="White" FontWeight="Bold"
                Height="35" Click="BtnAction_Click"/>
    </Grid>
</Window>