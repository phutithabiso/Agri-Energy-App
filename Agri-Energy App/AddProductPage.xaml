<Page x:Class="Agri_Energy_App.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add New Product" 
      Background="#FFF0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#228B22" CornerRadius="5" Padding="10">
            <TextBlock Text="Add New Product" 
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Product Name -->
        <StackPanel Grid.Row="1" Margin="0,20,0,10">
            <TextBlock Text="Product Name" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtProductName" 
                     Margin="0,0,0,0"
                     Padding="8"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Background="White"/>
        </StackPanel>

        <!-- Category -->
        <StackPanel Grid.Row="2" Margin="0,10">
            <TextBlock Text="Category" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbCategory" 
                      Margin="0,0,0,0"
                      Padding="8"
                      BorderBrush="#CCCCCC"
                      BorderThickness="1"
                      Background="White"
                      SelectedIndex="0">
                <ComboBoxItem Content="Vegetables"/>
                <ComboBoxItem Content="Poultry"/>
                <ComboBoxItem Content="Fruits"/>
                <ComboBoxItem Content="Dairy"/>
            </ComboBox>
        </StackPanel>

        <!-- Production Date -->
        <StackPanel Grid.Row="3" Margin="0,10">
            <TextBlock Text="Production Date" FontWeight="Bold" Margin="0,0,0,5"/>
            <DatePicker x:Name="dpProductionDate" 
                        Margin="0,0,0,0"
                        Padding="8"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Background="White"/>
        </StackPanel>

        <!-- Description -->
        <StackPanel Grid.Row="4" Margin="0,10">
            <TextBlock Text="Description" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescription" 
                     Margin="0,0,0,0"
                     Padding="8"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Background="White"
                     AcceptsReturn="True" 
                     Height="120" 
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Save Button -->
        <Button Grid.Row="5" 
                Content="Save Product" 
                HorizontalAlignment="Right"
                Width="120" 
                Height="35"
                Margin="0,20,0,0"
                Padding="5"
                Background="#228B22"
                Foreground="White"
                FontWeight="Bold"
                Click="SaveProduct_Click"/>
    </Grid>
</Page>