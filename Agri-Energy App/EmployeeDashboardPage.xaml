<Page x:Class="Agri_Energy_App.EmployeeDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeDashboardPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Dashboard Overview" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <TextBlock x:Name="txtWelcome" 
                       FontSize="14"
                       Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Dashboard Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <UniformGrid Columns="2">
                <!-- Farmers Count Card -->
                <Border Background="#FFF0F0F0" CornerRadius="5" Padding="15" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Total Farmers" FontSize="14" Foreground="#FF555555"/>
                        <TextBlock x:Name="txtFarmersCount" FontSize="24" FontWeight="Bold" Margin="0,5,0,10"/>
                        <Button Content="View Farmers" Margin="0,10,0,0" Padding="5" HorizontalAlignment="Left"
                                Click="ViewFarmers_Click"/>
                    </StackPanel>
                </Border>

                <!-- Products Count Card -->
                <Border Background="#FFF0F0F0" CornerRadius="5" Padding="15" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Total Products" FontSize="14" Foreground="#FF555555"/>
                        <TextBlock x:Name="txtProductsCount" FontSize="24" FontWeight="Bold" Margin="0,5,0,10"/>
                        <Button Content="View Products" Margin="0,10,0,0" Padding="5" HorizontalAlignment="Left"
                                Click="ViewProducts_Click"/>
                    </StackPanel>
                </Border>

                <!-- Recent Farmers Card -->
                <Border Background="#FFF0F0F0" CornerRadius="5" Padding="15" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Recent Farmers" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ListView x:Name="lstRecentFarmers" Height="150" BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding FullName}" FontWeight="Bold" Width="150"/>
                                        <TextBlock Text="{Binding Email}" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Recent Products Card -->
                <Border Background="#FFF0F0F0" CornerRadius="5" Padding="15" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Recent Products" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ListView x:Name="lstRecentProducts" Height="150" BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding Category}"/>
                                            <TextBlock Text=" - "/>
                                            <TextBlock Text="{Binding ProductionDate, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Page>