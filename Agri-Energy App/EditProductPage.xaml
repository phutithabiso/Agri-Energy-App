<Page x:Class="Agri_Energy_App.EditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Agri_Energy_App"
      mc:Ignorable="d"
      Title="Edit Product"
      Background="#FFF0F0F0">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#228B22" 
                CornerRadius="5" 
                Padding="10"
                Effect="{StaticResource ShadowEffect}"
                Margin="0,0,0,15">
            <TextBlock Text="Edit Product" 
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Product Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Product Name*" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtProductName" 
                     Style="{StaticResource ModernTextBox}"
                     Text="{Binding CurrentProduct.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Category -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Category*" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbCategory"
              Style="{StaticResource ModernComboBox}"
              ItemsSource="{Binding Categories}"
              SelectedItem="{Binding CurrentProduct.Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!-- Production Date -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Production Date*" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <DatePicker x:Name="dpProductionDate" 
                        Style="{StaticResource ModernDatePicker}"
                        SelectedDate="{Binding CurrentProduct.ProductionDate, Mode=TwoWay}"/>
        </StackPanel>

        <!-- Description -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescription" 
                     Style="{StaticResource ModernTextBox}"
                     Text="{Binding CurrentProduct.Description, Mode=TwoWay}"
                     AcceptsReturn="True" 
                     Height="100" 
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Style="{StaticResource SecondaryButton}"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="Cancel_Click"/>
            <Button Content="Save" 
                    Style="{StaticResource PrimaryButton}"
                    Width="100"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Page>