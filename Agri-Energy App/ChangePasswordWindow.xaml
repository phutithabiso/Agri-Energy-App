<Window x:Class="Agri_Energy_App.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <GroupBox Header="Change Password">
                <StackPanel Margin="10">
                    <TextBlock Text="Current Password:" Margin="0,5"/>
                    <PasswordBox x:Name="txtCurrentPassword" Margin="0,0,0,10"/>

                    <TextBlock Text="New Password:" Margin="0,5"/>
                    <PasswordBox x:Name="txtNewPassword" Margin="0,0,0,10"/>

                    <TextBlock Text="Confirm New Password:" Margin="0,5"/>
                    <PasswordBox x:Name="txtConfirmPassword" Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Width="80" Margin="0,0,10,0" Click="Cancel_Click"/>
                        <Button Content="Change" Width="80" Click="Change_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>