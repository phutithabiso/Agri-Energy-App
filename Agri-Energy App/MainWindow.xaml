<Window x:Class="Agri_Energy_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agri_Energy_App"
        mc:Ignorable="d"
        Title="AgricConnect - Sign In" 
        Height="550" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,30">
            <TextBlock Text="AgricConnect" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#006400"/>
            <TextBlock Text="Connecting Agriculture &amp; Sustainable Energy"
                       FontSize="10"
                       Foreground="DarkGray"/>
        </StackPanel>

        <!-- Welcome Section -->
        <StackPanel Grid.Row="1" Margin="30,30,30,0">
            <TextBlock Text="Welcome back"
                       FontSize="14"
                       FontWeight="SemiBold"/>
            <TextBlock Text="Enter your credentials to access your account"
                       FontSize="9"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Email Field -->
        <StackPanel Grid.Row="2" Margin="30,20,30,0">
            <TextBlock Text="Email Address" FontWeight="Bold"/>
            <TextBox x:Name="txtEmail" Text="your@email.com" Margin="0,5" Padding="5"/>
        </StackPanel>

        <!-- Password Field -->
        <StackPanel Grid.Row="3" Margin="30,15,30,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Password" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" 
                           Text="Forgot password?" 
                           Foreground="#006400"
                           Cursor="Hand"
                           MouseDown="ForgotPassword_MouseDown">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextDecorations" Value="None"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="TextDecorations" Value="Underline"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
            <PasswordBox x:Name="txtPassword" Margin="0,5" Padding="5"/>
        </StackPanel>

        <!-- Remember Me Checkbox -->
        <CheckBox Grid.Row="4" 
                  Content="Remember me for 30 days"
                  Margin="30,15"
                  x:Name="chkRememberMe"/>

        <!-- Sign In Button -->
        <Button Grid.Row="5"
                Content="Sign in"
                Background="#006400"
                Foreground="White"
                FontWeight="Bold"
                Margin="30,20"
                Height="40"
                Click="SignIn_Click"/>

        <!-- Sign Up Link -->
        <TextBlock Grid.Row="6" HorizontalAlignment="Center" Margin="0,15">
            <Run Text="Don't have an account?"/>
            <Hyperlink x:Name="lnkSignUp" Click="SignUp_Click">
                <Run Text=" Sign up"/>
            </Hyperlink>
        </TextBlock>

        <!-- Footer Vision -->
        <StackPanel Grid.Row="8" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <TextBlock Text="*Empowering farmers with sustainable energy solutions for a greener tomorrow.*"
                       FontStyle="Italic"
                       Foreground="Gray"
                       TextAlignment="Center"/>
            <TextBlock Text="— AgricConnect Vision"
                       Foreground="Gray"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>