<Window x:Class="Agri_Energy_App.EmployeeDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EmployeeDashboardWindow" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Top Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Sidebar -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Background="#006400" Margin="0,2,0,-2">
            <StackPanel>
                <TextBlock Text="AgriConnect"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="10,20,10,30"
                           HorizontalAlignment="Center"/>

                <Button Name="btnDashboard" Content="Dashboard" Margin="10,5" Padding="10"
                        Foreground="White" Background="#228B22" Click="BtnDashboard_Click"/>
                <Button Name="btnAddFarmer" Content="Add Farmer" Margin="10,5" Padding="10"
                        Foreground="White" Background="#228B22" Click="BtnAddFarmer_Click"/>
                <Button Name="btnViewProducts" Content="View Products" Margin="10,5" Padding="10"
                        Foreground="White" Background="#228B22" Click="BtnViewProducts_Click"/>
                <Button Name="btnViewFarmers" Content="View Farmers" Margin="10,5" Padding="10"
                        Foreground="White" Background="#228B22" Click="BtnViewFarmers_Click"/>

                <Separator Margin="10,20,10,10" Background="White"/>
                <Button Name="btnLogout" Content="Log Out" Margin="10,5" Padding="10"
                        Foreground="White" Background="#B22222" Click="BtnLogout_Click"/>
            </StackPanel>
        </Border>

        <!-- Top Header -->
        <Border Grid.Column="1" Grid.Row="0" Background="#228B22">
            <TextBlock x:Name="txtWelcome"
                       Foreground="White"
                       FontSize="18"
                       VerticalAlignment="Center"
                       Margin="20,0"/>
        </Border>

        <!-- Main Content Area -->
        <Frame x:Name="mainContentFrame" Grid.Column="1" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>